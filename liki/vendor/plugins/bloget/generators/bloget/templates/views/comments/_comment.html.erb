<a name="comment_<%= comment.id %>"></a>
<div class="comment">
  <div class="content">
    <%= comment.content %>
  </div>
  
  <div class="attribution">
    posted at <%= comment.created_at %> by <%= comment.poster.name %>
  </div>
  
  <% if logged_in? and comment.poster == current_user %>
    <ul class="horizontal-menu">
      <li>
        <%= link_to "Edit comment", edit_comment_url(comment.post, comment) %>
      </li>
    </ul>
  <% end %>
</div>